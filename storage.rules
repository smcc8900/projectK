rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /organizations/{orgId}/{allPaths=**} {
      allow read: if request.auth != null && 
                     request.auth.token.orgId == orgId;
      allow write: if request.auth != null && 
                      request.auth.token.orgId == orgId &&
                      request.auth.token.role == 'admin';
    }
  }
}

